@model IEnumerable<Homanager.Models.Group>

@{
    ViewData["Title"] = "Groups";
}

<h2>Groups</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Group</a>
</p>
<form asp-controller="Groups" asp-action="index">
    <p>
        <div class="row">
            <div class="col-xs-3">
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="input-group-text" id="">Group Name:</span>
                    </div>
                    <input type="text" class="form-control" name="SearchString" placeholder="Group Name" />
                </div>
            </div>
            <div class="col-xs-3">
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="input-group-text" id="">Created After:</span>
                    </div>
                    <input type="date" class="form-control" name="DateOpened" />
                </div>
            </div>
            <div class="col-xs-1">
                <div class="input-group">
                    <input type="submit" class="btn" value="Filter" />
                </div>
            </div>
        </div>
        <p></p>
        <div class="row">
            <div class="col-xs-3">
                <lable class="checkbox-inline"><input type="checkbox" name="OwnedByMe" value="true"/>Owned By Me</lable>
            </div>
        </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOpened)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOpened)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.UserName)
            </td>
            <td>
                <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@item.GroupId" class="btn btn-info">Edit</a>
                <a asp-action="Details" asp-route-id="@item.GroupId" class="btn btn-info">Details</a>
                <a asp-action="Users" asp-route-id="@item.GroupId" class="btn btn-info">Users</a>
                <a asp-controller="GroupCarts" asp-route-groupId="@item.GroupId" class="btn btn-info">Carts</a>
                <a asp-action="Delete" asp-route-id="@item.GroupId" class="btn btn-info">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
