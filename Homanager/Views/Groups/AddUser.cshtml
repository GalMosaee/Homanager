@model Homanager.ViewModels.UserGroupModel
@{
    ViewData["Title"] = "Add User";
}

<h2>Invite User</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchUser">
            <input type="hidden" asp-for="GroupId" />
            <div class="form-group">
                <label asp-for="SearchUserKey" class="control-label"></label>
                <input asp-for="SearchUserKey" class="form-control" />
                <span asp-validation-for="SearchUserKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.Group.Owner.Email)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Group.Owner.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Group.Owner.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SearchResultAppUsers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="AddUserToGroup"
                       asp-route-groupId="@Model.GroupId"
                       asp-route-userId="@item.Id" class="btn btn-success">Invite</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Index" class="btn btn-default">Back to List</a>
</div>